<form id="frm_new_sale" name="newSaleForm" novalidate>
    <div class="modal-header">
        <button type="button" class="close" ng-click="vm.cancel()" aria-label="Close">
            <span aria-hidden="true">&times;</span>
        </button>
        <h4 class="modal-title">
            <span>@L("NewSale_")</span>
        </h4>
    </div>
    <div class="modal-body">

        <table class="table table-hover table-striped">
            <thead>
                <tr>
                    <th>@L("Select")</th>
                    <th>@L("Name")</th>
                    <th>@L("Stock")</th>
                    <th>@L("Price")</th>
                </tr>
            </thead>
            <tbody>
                <tr ng-repeat="stock in vm.estoque" ng-if="stock.stock>0">
                    <td>
                        <button type="button" data-toggle="modal" data-target="#largeModal" class="btn btn-success btn-circle waves-effect waves-circle waves-float" ng-click="vm.nextSaleForm(stock.assignedProduct,stock)">
                            <i class="material-icons">attach_money</i>
                        </button>
                    </td>
                    <td>{{stock.assignedProduct.name}}</td>
                    <td><b>{{stock.stock}}</b></td>
                    <td>{{stock.price}}</td>
                </tr>
            </tbody>
        </table>

    </div>
    <div class="modal-footer">
        <button type="button" class="btn btn-default waves-effect" ng-click="vm.cancel()">
            @L("Cancel")
        </button>
    </div>
</form>