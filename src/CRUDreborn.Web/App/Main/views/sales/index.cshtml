<div class="row clearfix" ng-controller="app.views.sales.index as vm">
    <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12">
        <div class="card main-content">
            <div class="header">
                <h2>
                    @L("Sales")
                </h2>
                <ul class="header-dropdown m-r--5">
                    <i class="fa fa-spin fa-spinner" ng-if="vm.isTableLoading"></i>
                    <li class="dropdown">
                        <a href="javascript:void(0);" class="dropdown-toggle" data-toggle="dropdown" role="button" aria-haspopup="true" aria-expanded="false">
                            <i class="material-icons">more_vert</i>
                        </a>
                        <ul class="dropdown-menu pull-right">
                            <li><a href="javascript:void(0);" class="waves-effect waves-block()" ng-click="vm.refresh();"><i class="material-icons">refresh</i> @L("Refresh")</a></li>
                        </ul>
                    </li>
                </ul>
            </div>
            <button type="button" class="btn btn-block btn-lg btn-success waves-effect" ng-click="vm.openVendaCreationModal()">@L("CreateSale")</button>
            <div class="body table-responsive">
                <!-- ******************************************************** -->
                <table class="table table-hover table-striped">
                    <thead>
                        <tr>
                            <th>@L("Product")</th>
                            <th>@L("Quantity")</th>
                            <th>@L("Total")</th>
                            <th>@L("Details")</th>
                            <th>@L("Actions")</th>
                        </tr>
                    </thead>
                    <tbody>
                        <tr class="success" ng-repeat="venda in vm.vendas">
                            <td>{{venda.assignedProduct.name}}</td>
                            <td>{{venda.quantity}}</td>
                            <td>@L("$") <b>{{venda.total}}</b></td>
                            <td>
                                <button type="button" data-toggle="modal" data-target="#largeModal" class="btn bg-teal waves-effect" ng-click="vm.openDetailsModal(venda)">
                                    <i class="material-icons">search</i>
                                </button>
                            </td>
                            <td class="dropdown">
                                <a href="javascript:void(0);" class="dropdown-toggle" data-toggle="dropdown" role="button" aria-haspopup="true" aria-expanded="false">
                                    <i class="material-icons">menu</i>
                                </a>
                                <ul class="dropdown-menu pull-right">
                                    <li><a href="javascript:void(0);" class="waves-effect waves-block" ng-click="vm.delete(venda)"><i class="material-icons">delete_sweep</i>@L("Delete")</a></li>
                                </ul>
                            </td>
                        </tr>
                    </tbody>
                </table>
                <!-- ******************************************************** -->
            </div>
        </div>
    </div>
</div>