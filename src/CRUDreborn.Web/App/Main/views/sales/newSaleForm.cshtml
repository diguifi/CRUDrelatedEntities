<form id="frm_new_sale" name="newSaleForm" novalidate>
    <div class="modal-header">
        <button type="button" class="close" ng-click="vm.cancel()" aria-label="Close">
            <span aria-hidden="true">&times;</span>
        </button>
        <h4 class="modal-title">
            <span>@L("NewSale_")</span>
        </h4>
    </div>
    <div class="modal-body">

        <div class="row clearfix">
            <div class="col-sm-12">
                <div class="form-group form-float">
                    <label for="produtoname" class="form-label">@L("Product")</label>
                    <div class="form-line">
                        <input id="produtoname" type="text" name="Produtoname" ng-model="vm.produto.name" class="validate form-control" placeholder="Disabled" disabled="">
                    </div>
                </div>
            </div>
        </div>

        <p class="range-field">
            <input type="range" id="test5" min="0" max="100" ng-model="teste"/>
        </p>
        {{teste}}

        <div class="row clearfix">
            <div class="col-sm-6">
                <div class="form-group form-float">
                    <label for="quant" class="form-label">@L("Quantity")</label>
                    <div class="form-line">
                        <input id="quant" type="text" name="Quant" ng-model="vm.venda.quantity" ng-change="vm.calculateTotal()" class="validate form-control">
                    </div>
                </div>
            </div>

            <div class="col-sm-6">
                <div class="form-group form-float">
                    <label for="total" class="form-label">@L("Total")</label>
                    <div class="form-line">
                        <label id="total" class="form-label">{{vm.venda.total}}</label>
                    </div>
                </div>
            </div>
        </div>


    </div>
    <div class="modal-footer">
        <button type="button" class="btn btn-default waves-effect" ng-click="vm.cancel()">
            @L("Back")
        </button>
        <button type="submit" class="btn btn-primary waves-effect" ng-click="vm.calculateTotal()" ng-disabled="newSaleForm.$invalid">
            @L("Save")
        </button>
    </div>
</form>