<form id="frm_create_stock" name="estoqueCreateForm" novalidate>
    <div class="modal-header">
        <button type="button" class="close" ng-click="vm.cancel()" aria-label="Close">
            <span aria-hidden="true">&times;</span>
        </button>
        <h4 class="modal-title">
            <span>@L("CreateNewStock")</span>
        </h4>
    </div>
    <div class="modal-body">
        <div class="row clearfix">
            <div class="col-sm-6">
                <div class="form-group form-float">
                    <label for="productname" class="form-label">@L("Stock")</label>
                    <div class="form-line">
                        <input id="productname" type="text" name="ProductName" ng-model="vm.estoque.stock" required maxlength="12" minlength="1" class="validate form-control">
                    </div>
                </div>
            </div>
        
            <div class="col-sm-6">
                <div class="form-group form-float">
                    <label for="description" class="form-label">@L("Price")</label>
                    <div class="form-line">
                        <input id="description" type="text" name="Description" ng-model="vm.estoque.price" required maxlength="100" minlength="1" class="validate form-control">
                    </div>
                </div>
            </div>
        </div>
        <label for="description" class="form-label">@L("Product"): </label>
        <label for="description" class="form-label">{{vm.produto.name}}</label>


        <div class="form-group">
            <select class="btn dropdown-toggle btn-default" data-toggle="dropdown" ng-model="vm.produto" ng-options="produto.name for produto in vm.produtos"></select>
        </div>


        <br />

    </div>
    <div class="modal-footer">
        <button type="button" class="btn btn-default waves-effect" ng-click="vm.cancel()">
            @L("Cancel")
        </button>
        <button type="submit" class="btn btn-primary waves-effect" ng-click="vm.save()" ng-disabled="estoqueCreateForm.$invalid">
            @L("Save")
        </button>
    </div>
</form>