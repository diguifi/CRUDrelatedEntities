<form id="frm_list_products" novalidate>
    <div class="modal-header">
        <button type="button" class="close" ng-click="vm.cancel()" aria-label="Close">
            <span aria-hidden="true">&times;</span>
        </button>
        <h4 class="modal-title">
            <span>@L("AssociatedProducts")</span>
        </h4>
    </div>
    <div class="modal-body">

        <table class="table table-hover table-striped">
            <thead>
                <tr>
                    <th>@L("Name")</th>
                    <th>@L("Description")</th>
                </tr>
            </thead>
            <tbody>
                <tr ng-repeat="product in vm.produtos">
                    <td>{{product.name}}</td>
                    <td>{{product.description}}</td>
                </tr>
            </tbody>
        </table>

    </div>
    <div class="modal-footer">
        <button type="button" class="btn btn-default waves-effect" ng-click="vm.cancel()">
            @L("Ok")
        </button>
    </div>
</form>